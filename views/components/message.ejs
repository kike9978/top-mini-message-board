<article class="p-3 rounded border border-solid border-black bg-white flex flex-col gap-4">
    <p class="text-xl font-bold flex-grow ">
        <%= message.body %>
    </p>
    <div class="flex justify-between items-end">
        <div class="flex flex-col">
            <h2 class="font-extrabold text-sm">
                <%= message.user %>
            </h2>
            <p class="text-sm text-slate-600">Posted on:
                <%= formatDate(message.added) %>
            </p>
        </div>
        <a href="<%= " /messages/" + message.id %>" class="px-2 py-1 rounded-lg border border-solid
            border-slate-600 hover:bg-black hover:text-white">Details</a>
    </div>
</article>